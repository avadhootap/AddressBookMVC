@model AddressBook.Modules.Person
<h3>@ViewBag.Result</h3>
<h1>Add Person</h1>
<form method="post" asp-controller="Person" asp-action="Add">
    <label for="title">Title</label><br />
    <select name="title" id="title">
        <option value="Mr.">MR</option>
        <option value="Mrs.">MRS</option>
    </select><br />

    <label for="firstName">FirstName</label><br />
    <input type="text" name="firstName" id="firstName" /><br />
    @Html.ValidationMessageFor(model => model.firstName)<br />

    <label for="lastName">LastName</label><br />
    <input type="text" name="lastName" id="lastName" /><br />
    @Html.ValidationMessageFor(item=>item.lastName)<br />

    <label for="middleName">MiddleName</label><br />
    <input type="text" name="middleName" id="middleName" /><br />
    @Html.ValidationMessageFor(item=>item.middleName)<br />

    <label for="age">Age</label><br />
    <input type="number" name="age" id="age" /><br />
    @Html.ValidationMessageFor(item=>item.age)<br />

    <label for="dob">Date Of Birth</label><br />
    <input type="date" name="dob" id="dob" /><br />
    @Html.ValidationMessageFor(item=>item.DOB)<br />

    <label for="gender">Gender</label><br />

    <input type="radio" name="gender" id="gender" value="Male" />
    <label for="gender">Male</label>&nbsp;&nbsp;
    
    <input type="radio" name="gender" id="gender" value="Female" />
    <label for="gender">Female</label>&nbsp;&nbsp;
    
    <input type="radio" name="gender" id="gender" value="Other"/>
    <label for="gender">Other</label>&nbsp;&nbsp;
    <br />
    @Html.ValidationMessageFor(item=>item.gender)<br />
    
    <label for="category">Category</label><br />
    <input type="radio" name="category" id="category" value="Business" />
    <lable for="category">Business</lable>&nbsp;&nbsp;
  
    <input type="radio" name="category" id="category"  value="Family"/>
    <lable for="category">Family</lable>&nbsp;&nbsp;
    
    <input type="radio" name="category" id="category" value="Other" />
    <lable for="category">Other</lable> <br />
    @Html.ValidationMessageFor(item=>item.category)<br />
    <input type="submit" value="Submit">
    
</form>