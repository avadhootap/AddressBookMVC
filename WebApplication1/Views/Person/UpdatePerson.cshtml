@model AddressBook.Modules.Person
<script>
    function Back(){
        window.location.href = '@Url.Action("GetPerson","Person")'
    }
</script>
<h1>Edit Person</h1>
<form method="post" asp-controller="Person" asp-action="Edit">
    <input type="hidden" name="personId" value="@Model.personId" />

    <label for="title">Title</label><br />
    <select name="title" id="title">
        <option value="Mr.">MR</option>
        <option value="Mrs.">MRS</option>
    </select><br />

    <label for="firstName">FirstName</label><br />
    <input type="text" name="firstName" id="firstName" checked="checked" value="@Model.firstName" /><br />

    <label for="lastName">LastName</label><br />
    <input type="text" name="lastName" id="lastName" value="@Model.lastName" /><br />

    <label for="middleName">MiddleName</label><br />
    <input type="text" name="middleName" id="middleName" value="@Model.middleName"/><br />

    <label for="age">Age</label><br />
    <input type="number" name="age" id="age" value="@Model.age" /><br />

    <label for="dob">Date Of Birth</label><br />
    <input type="date" name="dob" id="dob" value="@Model.DOB" /><br />

    <label for="gender">Gender</label><br />

   
    <input type="radio" name="gender" id="Male" value="Male" @(Model.gender.ToString() == "Male" ? "checked" : "") />
    <label for="Male">Male</label>
    

    <input type="radio" name="gender" id="Female" value="Female" @(Model.gender.ToString() == "Female" ? "checked" : "") />
    <label for="Female">Female</label>

    <input type="radio" name="gender" id="Other" value="Other" @(Model.gender.ToString() == "Other" ? "checked" : "") />
    <label for="Other">Other</label>
    <br />

    <label for="category">Category</label><br />
    <input type="radio" name="category" id="Business" value="Business" @(Model.category.ToString()=="Business" ? "checked" : "")/>
    <lable for="Business">Business</lable>

    <input type="radio" name="category" id="Family" value="Family" @(Model.category.ToString() == "Family" ? "checked" : "") />
    <lable for="Family">Family</lable>

    <input type="radio" name="category" id="Other" value="Other" @(Model.category.ToString() == "Other" ? "checked" : "") />
    <lable for="Other">Other</lable> <br /><br />

    <button type="submit">Update</button>
  
</form><br />
<button type="submit" onclick="Back()">Back</button>
